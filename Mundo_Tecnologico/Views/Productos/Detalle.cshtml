@model Mundo_Tecnologico.Models.Producto

@{
    ViewBag.Title = "Detalle Producto | Mundo Tecnológico";
    Layout = "~/Views/Shared/_LayoutPrincipal.cshtml";
}

<div class="contenedor_mantenimiento col-md-6 m-auto">
    <div class="card card-primary">

        <div class="card-header text-center">
            <h2 class="">Detalle del Producto</h2>
        </div>

        <div class="card-body">
            <dl class="dl-horizontal">
                <dt>
                    CÓDIGO
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.codigo)
                </dd>

                <dt>
                    FOTO
                </dt>

                <dd class="text-center">
                    <img src="@Url.Content(Model.foto)" class="img-fluid"/>
                </dd>

                <dt>
                    NOMBRE
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.nombre)
                </dd>

                <dt>
                    DESCRIPCIÓN
                </dt>

                <dd class="text-justify">
                    @Html.DisplayFor(model => model.descripcion)
                </dd>

                <dt>
                    PRECIO
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.precio)
                </dd>

                <dt>
                    STOCK
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.stock)
                </dd>

                <dt>
                    ESTADO
                </dt>

                <dd>
                    @(Model.estado == 1 ? "Activo" : "Eliminado")
                </dd>

                <dt>
                    MARCA
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.nombreMarca)
                </dd>

                <dt>
                    CATEGORÍA
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.nombreCategoria)
                </dd>

            </dl>
            <div class="card-footer d-flex justify-content-center">
                <a href="@Url.Action("Editar", "Productos", new { codigo = Model.codigo})" class="btn btn-primary mr-5 col-sm-4">Editar Producto</a>
                <a href="@Url.Action("Listado", "Productos")" class="btn btn-secondary col-sm-4">Volver al Listado</a>
            </div>
        </div>
    </div>
</div>

