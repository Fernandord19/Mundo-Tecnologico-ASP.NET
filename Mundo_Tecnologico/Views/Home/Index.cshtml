@{
    ViewBag.Title = "Inicio | Mundo Tecnológico";
    if (Session["usuario"] != null)
    {
        Layout = "~/Views/Shared/_LayoutPrincipal.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_LayoutPrincipal.cshtml";
