@model IEnumerable<Mundo_Tecnologico.Models.Marca>

@{
    ViewBag.Title = "Listado de Marcas | Mundo Tecnológico";
    Layout = "~/Views/Shared/_LayoutPrincipal.cshtml";
}

<div class="contenedor_mantenimiento col-md-6 m-auto">
    <div class="card card-primary">

        <div class="card-header text-center">
            <h2 class="">Listado de Marcas</h2>
            <a href="@Url.Action("Registrar", "Marcas")" class="btn btn-primary">Nuevo Registro</a>
        </div>
        <div class="card-body">

            @if (TempData["mensaje"] != null)
            {
                <div class="alert alert-info" role="alert">
                    <b><span>@TempData["mensaje"]</span></b>
                </div>
            }
            <table id="dataTable" class="table table-sm table-hover dt-responsive wrap" style="width:100%">
                <thead>
                    <tr>
                        <th style="width:20%;">
                            Código
                        </th>
                        <th class="wrap" style="width:60%;">
                            Nombre
                        </th>
                        <th style="width:5%;">
                            Estado
                        </th>
                        <th style="width:15%;">Operaciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.codigo
                            </td>
                            <td>
                                @item.nombre
                            </td>
                            <td>
                                @(item.estado == 1 ? "Activo" : "Eliminado")
                            </td>
                            <td class="text-center">
                                <a href="@Url.Action("Editar", "Marcas", new { codigo = item.codigo})"><i class="fas fa-edit"></i></a>
                                <a href="@Url.Action("Detalle", "Marcas", new { codigo = item.codigo})" style="color: green"><i class="fas fa-info-circle"></i></a>
                                <a href="@Url.Action("Eliminar", "Marcas", new { codigo = item.codigo})" onclick="return ConfirmarDelete(event, '@item.codigo')" style="color: red">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>
</div>
