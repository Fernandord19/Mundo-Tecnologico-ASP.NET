@model IEnumerable<Mundo_Tecnologico.Models.Item>

@{
    ViewBag.Title = "Detalle Usuario | Mundo Tecnológico";
    Layout = "~/Views/Shared/_LayoutPrincipal.cshtml";
}

<div class="contenedor_mantenimiento col-md-6 m-auto">
    <div class="card card-primary">

        <div class="card-header text-center">
            <h2 class="">Detalle de la Venta - @ViewBag.codigo</h2>
        </div>

        <div class="card-body">
            <table class="table table-hover table-striped table-sm" style="width:100%">
                <thead>
                    <tr>
                        <th>PRODUCTO</th>
                        <th>CANTIDAD</th>
                        <th>MONTO</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.nombre</td>
                            <td>@item.cantidad</td>
                            <td>S/. @item.monto</td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="card-footer d-flex justify-content-center">
                <a href="@Url.Action("Editar", "Ecommerce", new { codigo = ViewBag.codigo, estado = 2 })" class="btn btn-success mr-5 col-sm-3"><i class="fas fa-shipping-fast"></i> Aprobar</a>
                <a href="@Url.Action("Editar", "Ecommerce", new { codigo = ViewBag.codigo, estado = 4 })" class="btn btn-danger mr-5 col-sm-3"><i class="fas fa-ban"></i> Rechazar</a>
                <a href="@Url.Action("ListadoVentas", "Ecommerce")" class="btn btn-secondary col-sm-3">Volver al Listado</a>
            </div>
        </div>
    </div>
</div>

